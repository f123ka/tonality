<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".TonalityMainActivity">


    <currit.net.tonality.TonalityPianoView
        android:id="@+id/piano"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/piano_control_rows"
            android:name="currit.net.tonality.PianoControlRows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="16dp"
            android:layout_height="match_parent" />

        <fragment
            android:id="@+id/piano_control_keys"
            android:name="currit.net.tonality.PianoControlKeys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="16dp"
            android:layout_height="match_parent" />

        <fragment
            android:id="@+id/piano_control_scale"
            android:name="currit.net.tonality.PianoControlScale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>